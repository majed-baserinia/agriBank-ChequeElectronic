{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "baseUrl": "./src",
    "paths": {
      "@Mediatr/*": [
        "./thirdtools/mediatr/*"
      ],
      "@Fluentvalidator/*": [
        "./thirdtools/fluentvalidation/*"
      ]
    },
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "test",
    "public/browserUpdate.js",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "lib/**/*.js",
    ".eslintrc.cjs"
  ]
}